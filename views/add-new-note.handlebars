<div class="container px-5">

  {{! PAGE HEADER WITH BOOK DETAILS }}
  <div class="row mb-5">
    <div class="d-flex align-items-center justify-content-start note-header">

      <a href="/book/{{book.id}}">
        <img
          class="book-cover"
          src="{{book.image}}"
          alt="{{book.title}}"
          width="100px"
          height="150px"
        />
      </a>

      <div class="note-book-details">
        <h2>{{book.title}}</h2>
        <h3 style="text-transform: capitalize;">{{book.author}}</h3>
      </div>
    </div>
  </div>

  <div class="row align-items-start g-5">
    <div
      class="col-lg-4 order-lg-1 col-md-5 order-md-1 col-sm-12 order-sm-2 col-12 order-2"
    >

      {{! LEFT SIDE. SIDEBAR. }}
      <div class="sidebar">

        {{! DISPLAYS ALL BOOK NOTES IN SIDEBAR }}
        {{#each notes as |note|}}
          <div class="row mb-3">
            <div class="d-flex align-items-center mb-4">

              <div style="width:75%;">
                <a class="title-link" href="/single-note/{{book_id}}">
                  <h4 class="mb-1">{{note.title}}</h4>
                </a>
                <p class="mb-0 note-description">{{note.description}}</p>
              </div>

              {{! PLACEHOLDER FOR FUTURE DELETE BUTTON. }}
              {{! <div class="delete-note" style="width:25%; text-align:center;">
                                <img class="book-cover" src="/assets/delete-notes.png" alt="Minus Icon" width="25px" height="auto"/>
                            </div> }}
            </div>
          </div>
          <hr style="width:90%;" />
        {{/each}}
        <!-- ends here -->

      </div>
    </div>

    {{! RIGHT SIDE. }}
    <div
      class="col-lg-8 order-lg-2 col-md-7 order-md-2 col-sm-12 order-sm-1 col-12 order-1"
    >

      {{! ADD NEW NOTE FORM }}
      <form enctype="multipart/form-data" class="new-note-form">

        {{! NOTE TITLE }}
        <div class="form-group" style="margin-bottom:20px;">
          <label for="form-note-title" class="form-label-h6">Title</label>

          <input
            type="text"
            id="form-note-title"
            class="form-control"
            aria-label="Note Title"
          />
        </div>

        {{! DESCRIPTION }}
        <div class="form-group" style="margin-bottom:20px;">
          <label for="form-note-details" class="form-label-h6">Note</label>

          <textarea
            id="form-note-details"
            class="form-control"
            rows="8"
            cols="50"
            style="padding:40px"
            aria-label="Note Details"
            placeholder="Add your note here!"
          ></textarea>
        </div>

        {{! BUTTON }}
        <div style="text-align:end;">
          <button
            type="submit"
            value="{{book_id}}"
            id="form_submit_btn"
            class="theme-button button-h6"
          >Submit Note</button>

        </div>
      </form>
    </div>

  </div>
</div>

<script src="../js/add-new-note.js" class="{{book_id}}"></script>