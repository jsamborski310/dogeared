{{!-- My Library Page--}}

  {{!-- HEADER --}}
<div class="container">
  <div class="container d-flex align-content-center justify-content-start">
      <h2 style="text-align:center; padding-bottom:30px;">My Library</h2>
      <a href="/add-new-book" class="library-icon">+</a>
  </div>
</div>

<div id="exTab3" class="container">

  {{!-- NAVIGATION FOR BOOKS --}}
  <ul class="nav nav-pills">
      <li class="active">
          <a class="tab-link" href="#1b" data-toggle="tab"><h6 class="library-tab">ALL BOOKS</h6></a>
      </li>
      <li><a class="tab-link" href="#2b" data-toggle="tab"><h6 class="library-tab">TO BE READ</h6></a>
      </li>
      <li><a class="tab-link" href="#3b" data-toggle="tab"><h6 class="library-tab">HAVE READ</h6></a>
      </li>
  </ul>

    {{!-- TAB CONTENT --}}
    <div class="tab-content clearfix">

        {{!-- All Books tab --}}
        <div class="tab-pane active" id="1b">
            <div class="container d-flex justify-content-start">
                <div class="row row-cols-6 row-cols-sm-2 row-cols-md-4 row-cols-lg-6">

                  {{#each books as |book|}}
                        <div class="add-book-card">
                            <div style="position:relative;">
                                  <a href="/book/{{book.id}}">
                                    <img class="book-cover" src="{{book.image}}" alt="{{book.title}}" width="125px" height="187px"/>
                                  </a>
                            </div>
                        </div>
                  {{/each}}                 
                    
                </div>
            </div>  
        </div>

        {{!-- To Be Read tab --}}
        <div class="tab-pane" id="2b">
            <div class="container d-flex justify-content-start">
                <div class="row row-cols-6 row-cols-sm-2 row-cols-md-4 row-cols-lg-6">

                  {{#each books as |book|}}
                      {{#unless has_read}}
                        <div class="add-book-card">
                            <div style="position:relative;">
                                  <a href="/book/{{book.id}}">
                                    <img class="book-cover" src="{{book.image}}" alt="{{book.title}}" width="125px" height="187px"/>
                                  </a>
                            </div>
                        </div>
                      {{/unless}}
                  {{/each}}                 
                    
                </div>
            </div>  
        </div>

        {{!-- Have Read tab --}}
      <div class="tab-pane" id="3b">
            <div class="container d-flex justify-content-start">
                <div class="row row-cols-6 row-cols-sm-2 row-cols-md-4 row-cols-lg-6">

                  {{#each books as |book|}}
                      {{#if has_read}}
                        <div class="add-book-card">
                            <div style="position:relative;">
                                  <a href="/book/{{book.id}}">
                                    <img class="book-cover" src="{{book.image}}" alt="{{book.title}}" width="125px" height="187px"/>
                                  </a>
                            </div>
                        </div>
                      {{/if}}
                  {{/each}}                 
                    
                </div>
            </div>  
        </div>
    </div>

